{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./src/",
    "jsx": "react",
    "outDir": "lib",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ]
}